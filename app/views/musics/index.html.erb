<video autoplay loop>
  <source src="//vimeo-hp-videos.global.ssl.fastly.net/2/2-vp8.webm" type="video/webm">
    <!-- //vimeo-hp-videos.global.ssl.fastly.net/4/4-vp8.webm -->
    <!-- //vimeo-hp-videos.global.ssl.fastly.net/2/2-vp9.webm -->
    <!-- //vimeo-hp-videos.global.ssl.fastly.net/1/1-vp8.webm -->
    <!-- //vimeo-hp-videos.global.ssl.fastly.net/0/0-vp8.webm -->
  </video>
  <center>
    <div id="musicIndex">
      <h1><span id="Title-header">Today's Song</span></h1>
    </div>
    <br>
    <%= link_to new_music_path do %><span class="btn btn-success">Add Song<% end %>
    <% @musics.each do |i| %>
      <div id="carousel-<%= i.id %>" class="carousel slide" data-interval="false">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-<%= i.id %>" data-slide-to="0"></li>
        <li data-target="#carousel-<%= i.id %>" data-slide-to="1"></li>
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class="postmusic clearfix">
           <span class="float-right">
            <span id="NavBarTextLink">
              <%= link_to music_path(i) do %>
                <span class="glyphicon glyphicon-search" aria-hidden="true"><% end %> |
              <%= link_to edit_music_path(i) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"><% end %> |
              <%= link_to  music_path(i), method: :delete, data: { confirm: "Are you sure you want to delete this Song?"} do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"><% end %>
                  </span>
                </span>
                <div class="float-left">
                  <% if i.user %>
                  <%= i.user.name %> <br>
                  <img id="profile-picture"src = "<%= i.user.image_url %>"  >
                  <% end %>
                </div>
                <div class="float-center">
                  <h1> <%= i.song %> </h1> <%= i.genre %><h4> <%= i.artist %> </h4>
                </div>

                <div class='none'></div>
                <% if i.youtube_url %>
                <iframe width="90%" height="250px" src="https://www.youtube.com/embed/<%= i.youtube_url.split('v=')[1].split('&')[0] %>" frameborder="0" allowfullscreen></iframe>
                <% end %>
                <% if current_user %>
                <br> <button type="button" class="btn-like-liked" data-user='<%= current_user.id %>' data-music='<%= i.id %>'><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
                <div>Likes:  <span id="like-count-<%= i.id %>"><%= i.likes.count %></span></div> <br>
                <%= form_for Comment.new do |f| %>
                <%= f.hidden_field :music_id, :value => i.id %>
                <%= f.hidden_field :user_id, :value => current_user.id if current_user %>
                <div>
                  <%= f.label :Comment %>
                  <br>
                  <%= f.text_area :content, :placeholder => "...What's on your mind?", class:"comment-box"  %>
                </div>
                <%= f.submit "Submit", class:"submit-btn" %>
                <% end %>
                <% end %>
                <br><br>
              </div>
              <div class="carousel-caption">
              </div>
            </div>
            <div class="item">
              <div class="postmusic-comments">
                <h3> <%= i.user.name %> Comments:</h3>
                <% i.comments.each do |comment| %>
                <br>
                  <strong><%= comment.user.name %>:</strong> <%= comment.content %> | <%= link_to  music_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this Song?"} do %> <span class="glyphicon glyphicon-remove" aria-hidden="true"><% end %>
                  </span>


                  <% end %>
                  <% if current_user %>
                  <%= form_for Comment.new do |f| %>
                  <%= f.hidden_field :music_id, :value => i.id %>
                  <%= f.hidden_field :user_id, :value => current_user.id if current_user %>
                  <div>
                    <br><br>
                    <%= f.label :Comment %>
                    <br>
                    <%= f.text_area :content, :placeholder => "...What's on your mind?", class:"comment-box"  %>
                  </div>
                  <%= f.submit "Submit", class:"submit-btn"  %>
                  <% end %>
                  <% end %>
                </div>
                <div class="carousel-caption">
                </div>
              </div>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-<%= i.id %>" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-<%= i.id %>" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <% end %>
          <br>
          <%= link_to new_music_path do %><span class="btn btn-success">Add Song<% end %>
        </center>
















