<h1>Today's Song</h1>




    <% @musics.each do |i| %>
<div class="postmusic">
             <%= i.artist %> <br><strong> <%= i.song %> </strong><br> <%= i.genre %> <br>

            <button type="button"><%= link_to "More info", music_path(i) %></button>
            | <button type="button"><%= link_to "Delete", music_path(i), method: :delete, data: { confirm: "Are you sure you want to delete this Song?"} %></button>
            | <button type="button"><%= link_to "Edit", edit_music_path(i) %></button>


        <br>
        </div>
    <% end %>

