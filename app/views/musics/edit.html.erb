
<h1>Edit this Song!</h1>

<%= form_for @music do |f| %>

    <div>
        <%= f.label :Song %>
        <%= f.text_field :song, :placeholder=> "  Song"  %>
    </div>

    <div>
        <%= f.label :Artist %>
        <%= f.text_field :artist, :placeholder=> "  Artist"  %>
    </div>

    <div>
        <%= f.label :Genre %>
        <%= f.text_field :genre, :placeholder=> "  Genre"  %>
    </div>

<div>
        <%= f.label :youtube_url %>
        <%= f.text_field :youtube_url, :placeholder=> "  Youtube URL" %>
    </div>



    <%= f.submit "Submit" %>

<% end %>

<%= link_to "Back to the Play-list!", musics_path %>





